# Server Configuration - Using Non-Standard Ports
BACKEND_PORT=8437
FRONTEND_PORT=3437
HTTPS_PORT=8443
NODE_ENV=production

# SSL/HTTPS Configuration
SSL_ENABLED=true
FORCE_SSL=true
DOMAIN=your-domain.com
SSL_EMAIL=admin@your-domain.com
SSL_STAGING=false
SSL_PROVIDER=letsencrypt
# Optional: For Cloudflare DNS challenge
CLOUDFLARE_TOKEN=your-cloudflare-api-token

# Network Configuration
ENABLE_UPNP=true
AUTO_MAP_PORTS=true
# Optional: Manual IP configuration
# PUBLIC_IP=
# PRIVATE_IP=

# Database
DATABASE_URL=./data/mcp-proxy.db

# Redis (for BullMQ)
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here
API_KEY=your-api-key-here

# GitHub Integration (Optional - only needed for private repos)
# GITHUB_TOKEN=your-github-token
# GITHUB_WEBHOOK_SECRET=your-webhook-secret
CLONE_DIRECTORY=./mcp-services

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true